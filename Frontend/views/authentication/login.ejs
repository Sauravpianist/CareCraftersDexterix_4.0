<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Health Website - Login</title>
    <link rel="stylesheet" href="/styles/login.css">
</head>
<body>
    <%- include("../partials/header.ejs") %>
    <div class="containerforform">
        <form method="post" action="http://localhost:5000/app/auth/login" class="login-form">
            <h2>Login</h2>
            <div class="form-group" id="">
                <label for="email">Email:</label>
                <input  type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button style="background-color: orange;" onclick="handleSubmit()" type="submit">Login</button>
            <p>Don't have an account? <a href="/register">Sign Up</a></p>
        </form>
    </div>

    <script>
        const handleSubmit = async(e) => {
        e.preventDefault();
        const email = document.getElementById('email').value; // Get email input value
        const password = document.getElementById('password').value;
    
        const requestOptions = {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            email: email,
            password: password,
          }),
        };
    
        const res = await fetch("http://localhost:5000/app/auth/login", requestOptions)
          const data = res.json();
          console.log(data);
        //   res.redirected('/');
        console.log("submit")
        
      };
    
       </script>
</body>
</html>
